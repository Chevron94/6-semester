<Window x:Class="PostInterface.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подтверждение" Height="101" Width="300" WindowStartupLocation="CenterScreen" MinWidth="300" MinHeight="101" MaxWidth="300" MaxHeight="101" ResizeMode="NoResize" Background="LightGray" ShowInTaskbar="False">
    <Grid Height="52">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="74" />
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="74" />
            <ColumnDefinition Width="40" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="12*" />
        </Grid.RowDefinitions>
        <Label Content="" Name="QuestionLabel" Grid.Column="1" Grid.ColumnSpan="4" />
        <Button Content="OK" Grid.Column="1" Grid.Row="1" Name="OkButton" Click="OkButton_Click" />
        <Button Content="Отмена" Grid.Column="4" Grid.Row="1" Name="CancelButton" Click="CancelButton_Click" />
    </Grid>
</Window>
