<Window x:Class="PostInterface.Message"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сообщение" Height="204" Width="260" Background="LightGray" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" WindowStyle="SingleBorderWindow" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75" />
            <ColumnDefinition Width="94*" />
            <ColumnDefinition Width="60" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*" />
            <RowDefinition Height="25" />
            <RowDefinition Height="6" />
        </Grid.RowDefinitions>
        
        <TextBlock Name="MessageText" Text="TextBlock" VerticalAlignment="Center"  Grid.ColumnSpan="3" TextWrapping="Wrap" TextAlignment="Center" />
        
        <Button Content="OK" Grid.Column="1" Grid.Row="1" Name="button1" Click="button1_Click" />
    </Grid>
</Window>
