<Window x:Class="PostInterface.InputId"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите ID" Height="121" Width="326" WindowStartupLocation="CenterScreen" KeyDown="Window_KeyDown" Background="LightGray" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid Width="301" Height="79">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170" />
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="60" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <Label Content="" Name="InputIDLabel" VerticalAlignment="Top" Grid.ColumnSpan="4" FontStretch="Normal" FontWeight="Normal" FontStyle="Normal" />
        <TextBox Grid.ColumnSpan="4" Grid.Row="1"  Name="InputIDTextBox" PreviewTextInput="InputIDTextBox_PreviewTextInput" />
        <Button Content="ОК" Grid.Column="1" Grid.Row="2" Name="OKButton" Click="OKButton_Click" />
        <Button Content="Отмена" Grid.Column="3" Grid.Row="2" Name="CancelButton" Click="CancelButton_Click" />
    </Grid>
</Window>
